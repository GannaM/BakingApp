        android:textSize="16sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/ingredient_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Graham Cracker crumbs"
        android:textSize="16sp"/>

</LinearLayout>
